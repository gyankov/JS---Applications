<div class="panel panel-primary material" data-id='{{id}}'>
   
    <div class="panel-heading">
        <div class="row">
            <div class="col-xs-3">

            </div>
            <div class="col-xs-9 text-right">
                <div class="huge">Publication date: {{createdOn}}</div> 
            </div>
            <div class="col-xs-9 text-left">
                <h4>{{title}}</h4>
                <p>{{description}}</p>
                <p>{{body}}</p>
            </div>
            <div><img src="{{img}}" alt=""></div>
            <div id="status-buttons">
              <a id="want-to-watch" class= "btn btn-default">Want to watch</a>
              <a id="watched" class= "btn btn-default">Watched</a>
              <a id="watching" class= "btn btn-default">Watching</a>

            </div>
        </div>
    </div>
 
    <span class="">rating: {{rating}}</span>
    <span class="">Comments: {{commentsCount}}</span>
    
    <a href= "#/profiles/{{user.username}}">
        
        <div class="panel-footer">
            <span class="pull-left">creator: {{user.username}}</span>

            <div class="clearfix"></div>
        </div>
    </a>
</div>
{{#each comments}}
<div  style="background-color: light blue"> 
    <p>{{text}}</p>
    <p>by <a href="'#/profiles/{{user.username}}">{{user.username}}</a></p>
</div>
{{/each}}
   
 <div id="comments-form" class="form-group">
    <label for="add-coment-input">Add comment:</label>
    <input type="email" class="form-control" id="add-coment-input" >
    <a id="btn-comment" class= "btn btn-default">Post</a>
  </div>